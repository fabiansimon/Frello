datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  role      String
  expertise String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Task {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  assigneeId  String?
  title       String
  description String
  status      TaskStatus
  projectId   String
  project     Project    @relation(fields: [projectId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  users       User[]
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TaskStatus {
  ToDo       @map("to-do")
  InProgress @map("in progress")
  InReview   @map("in review")
  Declined
  Done
}
